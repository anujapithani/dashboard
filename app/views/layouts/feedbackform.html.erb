<!DOCTYPE html>   
<html>   
<head>   
    <title>feedback form Example</title> 
</head>   
<body>  
<h2>feedback form</h2>
 <%= form_with scope: :feedbackform, url: feedbackform_path, local: true do |form| %>
 
<div class="form-group p-2">
  <strong><%= form.label :name %></strong><br>
  <%= form.text_field :name, class: 'form-control' %>
  </div>
<div class="form-group p-2">
 <strong><%= form.label :Rating %></strong><br>
 <%= form.radio_button :rating, "1" %>
 <%= form.label :rating, "1" %><br>
 <%= form.radio_button :rating, "2" %>
 <%= form.label :rating, "2" %><br>
 <%= form.radio_button :rating, "3" %>
 <%= form.label :rating, "3" %><br>
 <%= form.radio_button :rating, "4" %>
 <%= form.label :rating, "4" %><br>
 <%= form.radio_button :rating, "5" %>
 <%= form.label :rating, "5" %><br>
</div>
<div class="form-group p-2">
        <strong><%= form.label :comments %></strong><br>
        <%= form.text_area :comments, size: "30x6",placeholder: 'enter comments', class: 'form-control' %>
</div>
<div class="form-group p-2">
  <%= form.submit :submit, class: 'form-control btn-dark' %>
</div>
<% end %>
<%= yield %> 
<a href="/user" >home page</a>                                             
</body>   
</html>  
